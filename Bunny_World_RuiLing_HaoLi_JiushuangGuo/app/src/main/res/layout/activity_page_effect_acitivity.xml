<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pageEffectAcitivity"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text=" Add Page On Enter Effect"
            android:gravity="center_vertical"/>

        <Spinner
            android:id="@+id/onEnterSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:minWidth="120dp">
        </Spinner>


        <Spinner
            android:id="@+id/onEnterPageSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:minWidth="120dp">
        </Spinner>


        <Spinner
            android:id="@+id/onEnterItemSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="120dp">
        </Spinner>



        <Button
            android:id="@+id/addPageEffectButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Effect" />
        <Button
            android:id="@+id/saveEffectButton_page_effect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text = "SAVE Effect" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Current Page Effect  "
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical" />
        <ListView
            android:id="@+id/effectListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"/>

    </LinearLayout>


</LinearLayout>